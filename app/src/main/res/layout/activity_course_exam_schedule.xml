<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseExamSchedule">




    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term :"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_marginTop="3dp"
            android:layout_width="100dp"
            android:layout_height="40dp"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type :"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/subspinner"
            android:layout_marginTop="3dp"
            android:layout_width="100dp"
            android:layout_height="40dp"/>



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">


        <TextView
            android:id="@+id/document_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="Click below to choose a file ->"
            android:textStyle="normal"
            android:textColor="@android:color/background_dark"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/choose_file_imageview"
            android:layout_marginTop="25dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/documentchooseimage"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/chosen_file_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Selected File  : "
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/upload_chosen_file_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/upload_chosen_file"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/upload_chosen_file_textview"
            android:visibility="invisible"
            android:layout_margin="1dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_gravity="center"/>






    </LinearLayout>






</RelativeLayout>