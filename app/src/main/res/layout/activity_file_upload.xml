<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileUploadActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/document_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="Click below to choose a file ->"
        android:textStyle="normal"
        android:textColor="@android:color/background_dark"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/choose_file_imageview"
        android:layout_marginTop="25dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@drawable/documentchooseimage"/>

    <TextView
        android:id="@+id/chosen_file_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Selected File  : "
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/upload_chosen_file_imageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/upload_chosen_file"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/upload_chosen_file_textview"
        android:visibility="invisible"
        android:layout_margin="1dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/view_files"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="View Study Material"
        android:background="@drawable/button_background"
        android:padding="2dp"/>

    <Button
        android:id="@+id/launch_study_material"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Launch Study Material"
        android:background="@drawable/button_background"
        android:padding="2dp"/>
    <Button
        android:id="@+id/downloadSheetButtonTheory"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Download Submission List - Theory"
        android:padding="5dp"
        android:background="@drawable/button_background"
       />
    <Button
        android:id="@+id/downloadSheetButtonLab"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Download Submission List - Lab"
        android:padding="5dp"
        android:background="@drawable/button_background"
        />





</LinearLayout>